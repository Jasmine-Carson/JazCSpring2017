package textExcel;

public class PercentCell extends RealCell implements Cell {

	private String fullCell;
	private double doubleValue;
	
	@Override
	public String abbreviatedCellText() {
		String abbText = fullCell;
		abbText = abbText+"%";
		while(abbText.length()<10){
			abbText = abbText + " ";
		}
		if(abbText.length()>10){
			abbText = abbText.substring(0, 9)+"%";
		}
		return abbText;
	}

	@Override
	public String fullCellText() {
		return (doubleValue+"");
	}
	
	public PercentCell(String value){
		super(value);
		if  (value.indexOf(".")>=0){
			String [] parts = value.split(".");
			if(parts.length>1){
				int whole = Integer.parseInt(parts[0]);
				int decimal = Integer.parseInt(parts[1]);
				double dec = (double) decimal;
				while(dec>=1){
					dec = dec/10;
				}
				doubleValue = (double) whole + dec;
			}
		}
		else{
			doubleValue = (double) Integer.parseInt(value);
		}
		fullCell = value;
		doubleValue = doubleValue/100.0;
	}

}
