package textExcel;

public abstract class RealCell implements Cell {

	private String fullCell;
	private double doubleValue;
	
	@Override
	public String abbreviatedCellText() {
		String abbText = fullCell;
		while(abbText.length()<10){
			abbText = abbText + " ";
		}
		if(abbText.length()>10){
			abbText = abbText.substring(0, 10);
		}
		return abbText;
	}

	@Override
	public String fullCellText() {
		return (fullCell+"");
	}
	
	public double getDoubleValue(){
		return doubleValue;
	}
	
	public RealCell(String value){
		fullCell = value;
		//make decimal value
		if  (value.indexOf(".")>=0){
			String [] parts = value.split(".");
			if(parts.length>1){
				long whole = Integer.parseInt(parts[0]);
				int decimal = Integer.parseInt(parts[1]);
				double dec = (double) decimal;
				while(dec>=1){
					dec = dec/10;
				}
				doubleValue = (double) whole + dec;
			}
		}
		else{
			doubleValue = (double) Integer.parseInt(value);
		}
	}

}
